{
  "compilerOptions": {
    "baseUrl": ".", 
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "strict": true, 
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler"
  },
  "include": ["src"]
}
